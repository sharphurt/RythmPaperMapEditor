<Button x:Class="RythmPaperMapEditor.Views.CustomControls.TrackGridElementHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RythmPaperMapEditor.Views.CustomControls"
             mc:Ignorable="d"
             Drop="TrackGridElementHolder_OnDrop"
             DragOver="TrackGridElementHolder_OnDragOver"
             MouseRightButtonUp="TrackGridElementHolder_OnMouseRightButtonUp"
             Background="Transparent"
             BorderBrush="Transparent"
             BorderThickness="0"
             AllowDrop="True"
             d:DesignHeight="300" Width="30">
    <Grid>
        <Rectangle x:Name="EmptyIcon" Width="2" Height="300" VerticalAlignment="Stretch" Fill="{StaticResource TransparentWhiteColor}" />
        <Image x:Name="ItemIcon" Width="30" Height="30" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Button>
